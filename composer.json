{
    "name": "imepay/php-sdk",
    "description": "PHP SDK for IME Pay Payment Gateway",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "IME Pay SDK Team",
            "email": "support@imepay.com.np"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "IMEPaySDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IMEPaySDK\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "version": "1.0.0"
}
